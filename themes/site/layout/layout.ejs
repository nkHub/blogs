<!DOCTYPE html>
<html lang="<%= config.language %>">

<head>
  <title>
    <%= config.title %>
  </title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
  <link rel="stylesheet" href="<%- url_for('/css/reset.css') %>">
  <link rel="stylesheet" href="<%- url_for('/css/main.css') %>">
</head>

<body>
  <!-- header -->
  <%- fragment_cache('header', function(){ return partial('partial/header') }) %>
  <!-- content -->
  <main class="container">
    <!-- side -->
    <%- fragment_cache('sider', function(){ return partial('partial/sider') }) %>
    <div class="content">
      <%- body %>
    </div>
  </main>
  <!-- footer -->
  <%- fragment_cache('footer', function(){ return partial('partial/footer') }) %>
</body>

</html>