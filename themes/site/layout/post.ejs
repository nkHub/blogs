<div class="columns">
  <div class="column is-one-quarter is-hidden-mobile">
    <div class="block">
      <article class="message is-dark">
        <div class="message-header">
          <p>目录</p>
        </div>
        <div class="message-body">
          <%- toc(page.content, {
            class: 'menu',
            class_child: 'menu-list',
            list_number: false
          }) %>
        </div>
      </article>
    </div>
  </div>
  <div class="column is-three-quarters-desktop">
    <div class="block">
      <h1 class="title is-1"><%- page.title %></h1>
      <p class="subtitle is-7">
        发布日期：<%- page.date.format('YYYY年MM月DD日 HH:mm:ss') %>
      </p>
    </div>
    <div class="block">
      <div class="content">
        <%- page.content %>
      </div>
    </div>
  </div>
</div>